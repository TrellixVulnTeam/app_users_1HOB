<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Все пользователи</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<%- include('header') %>
<body class="bg-gray-900">
  <section class="text-gray-400 bg-gray-900 body-font">
    <div class="container px-5 py-24 mx-auto">
      <div class="flex flex-wrap w-full mb-20">
        <div class="lg:w-1/2 w-full mb-6 lg:mb-0">
          <h1 class="sm:text-3xl text-2xl font-medium title-font mb-2 text-white">Все тачки</h1>
          <% if(count !== null) { %>
            <h2 class="sm:text-3xl text-2xl font-medium title-font mb-2 text-white">Количество найденных машин: <%= count%>
            </h2>
            <% } %>
          <div class="h-1 w-20 bg-purple-500 rounded"></div>
        </div>
        <form
        class="xl:w-1/3 md:w-1/1 bg-gray-800 bg-opacity-50 rounded-lg p-8 flex flex-col md:ml-auto w-full mt-10 md:mt-0"
        action="/cars" method="POST">
        <h2 class="text-white text-lg font-medium title-font mb-5">Найти машины по бренду</h2>
        <div class="relative mb-4">
          <label for="brand" class="leading-7 text-sm text-gray-400">Бренд</label>
          <input type="text" id="brand" name="brand"
            class="w-full bg-gray-600 bg-opacity-20 focus:bg-transparent focus:ring-2 focus:ring-indigo-900 rounded border border-gray-600 focus:border-indigo-500 text-base outline-none text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
        </div>
        <button
          class="text-white bg-purple-500 border-0 py-2 px-8 focus:outline-none hover:bg-indigo-600 rounded text-lg">Найти машинки</button>
      </form>
      </div>
      <div class="container px-5 py-10 mx-auto flex flex-wrap items-start">
        <div class="flex flex-wrap -m-4 xl:w-2/3 md:w-1/1 mb-4">
          <% if(results !== null) { %>
            <% for(const car of results) { %>
            <div class="xl:w-1/3 md:w-1/2 p-4">
              <div class="bg-gray-800 bg-opacity-40 p-6 rounded-lg">
                <h3 class="tracking-widest text-purple-400 text-xs font-medium title-font">Марка авто: <%= car.Make_Name%>
                </h3>
                <h2 class="text-lg text-white font-medium title-font mb-4">
                  Модель авто: <%= car.Model_Name%>
                    <div class="h-1 w-35 bg-purple-500 rounded"></div>
                </h2>
                <h2 class="text-lg text-white font-medium title-font mb-4">
                  ID авто: <%= car.Model_ID%>
                </h2>
              </div>
            </div>
            <% } %>
            <% } %>
        </div>
      </div>
  </section>
</body>

</html>